<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="../node_modules/bootstrap/dist/css/bootstrap.min.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>NodeJsCRUD_EJS</title>
</head>
<body>
    <div class="container">
    <button type="button" onclick="location.href='/create'" class="btn btn-outline-primary mt-4">Create</button>
    </div>
    <h1 style="text-align: center;" class="m-2">User's List</h1>
    <div class="container">
        <div class="row">
            <table class="table table-hover">
      <tr class="trh">
            <th>ID</th>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Birth</th>
            <th></th>
            <th></th>
        </tr>
        <% results.forEach((user)=> { %>

    
        <tr>
            <td><%= user.id %></td>
            <td><%= user.nameu %></td>
            <td><%= user.lnameu %></td>
            <td><%= user.email %></td>
            <td><%= user.mobile %></td>
            <td><%= moment(user.birth).format( 'YYYY-MM-DD') %></td>
            <!-- <button onclick="/edit/<%= user.id %>"></button> -->
             <td><a href="/edit/<%= user.id %>" class="btn btn-outline-success">Edit</a></td>
            <td><a href="/optiond/<%= user.id %>" class="btn btn-outline-danger">Delete</a></td>
        </tr>
        <% }) %>
    </table>
        </div>
    </div>
    <!-- <script src="../node_modules/bootstrap/dist/js/bootstrap.min.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>